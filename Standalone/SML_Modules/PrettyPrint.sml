structure PrettyPrint =
struct	

	structure PP_Views 	= PRETTYPRINT_ENGINE_FN(structure UserStyles = PRETTYPRINT_STYLES)

	(* ------------------------------------------------------------------------------------------- *)

	fun pp [ program ] =
		let
			val file         =  Environment.getPP_filename("pp")
			
			val output_file  = TextIO.openOut(file) 
			val the_program = Strategic_Values.getTerm program
		in
		
			PP_Views.prettyprint(output_file, the_program);
			TextIO.closeOut(output_file);
			
			ABSTRACT_REPRESENTATION.TRUE 
		end
	  | pp _ = raise General.Fail("Error in PrettyPrint.pp: inappropriate arguments to function.\n");

(* ------------------------------------------------------------------------------------------- *)
(* ------------------------------------------------------------------------------------------- *)
(*                                 Exported Function List                                      *)
(* ------------------------------------------------------------------------------------------- *)
(* ------------------------------------------------------------------------------------------- *)


 val functions = 
		[
			("pp", pp)
		]


